{
  "name": "zanai-vscode",
  "displayName": "Zanai VS Code",
  "description": "Zanai integration for VS Code - AI-powered development assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "socket.io-client": "^4.7.2",
    "axios": "^1.5.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "zanai.connect",
        "title": "Zanai: Connect to Server"
      },
      {
        "command": "zanai.disconnect",
        "title": "Zanai: Disconnect"
      },
      {
        "command": "zanai.syncContext",
        "title": "Zanai: Sync Context"
      },
      {
        "command": "zanai.executeAgent",
        "title": "Zanai: Execute Agent"
      },
      {
        "command": "zanai.showAgents",
        "title": "Zanai: Show Available Agents"
      },
      {
        "command": "zanai.openWebInterface",
        "title": "Zanai: Open Web Interface"
      },
      {
        "command": "zanai.refreshAgents",
        "title": "Zanai: Refresh Agents"
      },
      {
        "command": "zanai.viewAgentDetails",
        "title": "Zanai: View Agent Details"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "zanaiAgents",
          "name": "Zanai Agents",
          "when": "zanai.connected"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "zanaiAgents",
        "contents": "Connect to Zanai server to see your agents.\n[Connect to Server](command:zanai.connect)\n\nOr [Open Web Interface](command:zanai.openWebInterface) to manage agents."
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "zanai.disconnect",
          "when": "zanai.connected"
        },
        {
          "command": "zanai.syncContext",
          "when": "zanai.connected"
        },
        {
          "command": "zanai.executeAgent",
          "when": "zanai.connected"
        },
        {
          "command": "zanai.showAgents",
          "when": "zanai.connected"
        },
        {
          "command": "zanai.refreshAgents",
          "when": "zanai.connected"
        },
        {
          "command": "zanai.connect",
          "when": "!zanai.connected"
        }
      ],
      "view/title": [
        {
          "command": "zanai.refreshAgents",
          "when": "view == zanaiAgents",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "zanai.executeAgent",
          "when": "view == zanaiAgents && viewItem == active",
          "group": "inline"
        },
        {
          "command": "zanai.viewAgentDetails",
          "when": "view == zanaiAgents",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Zanai",
      "properties": {
        "zanai.serverUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL of the Zanai server"
        },
        "zanai.workspaceId": {
          "type": "string",
          "description": "Workspace ID for Zanai integration"
        },
        "zanai.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync context when files change"
        },
        "zanai.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for agent activities"
        }
      }
    }
  }
}